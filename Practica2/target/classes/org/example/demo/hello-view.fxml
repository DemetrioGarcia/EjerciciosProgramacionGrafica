<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.DatePicker?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.demo.HelloController">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
  </padding>

  <TableView fx:id="tablaEstudiante" prefHeight="200.0" prefWidth="200.0">
    <columns>
      <TableColumn fx:id="niaTableColumn" prefWidth="75.0" text="NIA" />
      <TableColumn fx:id="nombreTableColumn" prefWidth="75.0" text="Nombre" />
      <TableColumn fx:id="fechaTableColumn" prefWidth="75.0" text="Fecha nacimiento" />
    </columns>
  </TableView>

  <ButtonBar prefHeight="40.0" prefWidth="200.0" />
  <TextField fx:id="NiaTextField" promptText="Introduce un NIA..." />
  <TextField fx:id="NombreTextField" promptText="Introduce un nombre..." />
  <DatePicker fx:id="FechaTextField" promptText="Fecha de nacimiento..."/>

  <Button fx:id="boton1" mnemonicParsing="false" onAction="#guardarEstudiante" prefHeight="42.0" prefWidth="510.0" text="Insertar" textAlignment="CENTER">
    <font>
      <Font size="17.0" />
    </font>
  </Button>

  <Button  mnemonicParsing="false" onAction="#actualizarEstudiante" prefHeight="42.0" prefWidth="510.0" text="Actualizar" textAlignment="CENTER">
    <font>
      <Font size="17.0" />
    </font>
  </Button>

  <Button mnemonicParsing="false" onAction="#eliminarEstudiante" prefHeight="42.0" prefWidth="510.0" text="Eliminar" textAlignment="CENTER">
    <font>
      <Font size="17.0" />
    </font>
  </Button>

  <Button fx:id="boton2" mnemonicParsing="false" onAction="#guardar" prefHeight="42.0" prefWidth="510.0" text="Guardar" textAlignment="CENTER" >
    <font>
      <Font size="17.0" />
    </font>
  </Button>

</VBox>
